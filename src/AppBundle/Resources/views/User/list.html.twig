{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    <h1>Users</h1>

    <div class="btn-group">
        <a class="btn btn-default btn-sm" href="{{ path('app_user_add') }}">
            Add new
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('app_user_edit', {user: user.id}) }}">
                                Edit
                            </a><a class="btn btn-default btn-sm" href="{{ path('app_user_delete', {user: user.id}) }}">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
